<%include header %>
    <h1><%= title %></h1>
    <table class="table-hovered" width="100%">
        <thead>
        <tr>
            <th>标题</th>
            <th>作者</th>
            <th>内容</th>
            <th>发布时间</th>
            <th>操作</th>
        </tr>
        </thead>
    <tbody>

    <% posts.forEach(function (post,index){%>
        <tr>
            <td><%= post.title%></td>
            <td><%= post.name%></td>
            <td><%= post.content%></td>
            <td><%= post.time%></td>
            <td>
                <a href="" class="btn btn-primary" target="_blanck"> 修改</a>
                <a href="" class="btn btn-primary">删除</a>
            </td>
        </tr>
    <% })%>
    </tbody>

    </table>
<%include footer%>